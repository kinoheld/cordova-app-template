<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SimpleApp</name>
    <description>
        SimpleApp
    </description>
    <author email="apps@kinoheld.de" href="https://www.kinoheld.de">
        Kinoheld GmbH
    </author>
    <content src="index.html" />

    <!-- Splashscreen (https://cordova.apache.org/docs/en/9.x/reference/cordova-plugin-splashscreen/index.html#preferences) -->
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="FadeSplashScreenDuration" value="1500" />
    <preference name="SplashScreenBackgroundColor" value="#ffffff" />
    <preference name="SplashScreen" value="screen" />
    <preference name="ShowSplashScreenSpinner" value="false" />

    <!-- Statusbar (https://cordova.apache.org/docs/en/10.x/reference/cordova-plugin-statusbar/#preferences) -->
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarDefaultScrollToTop" value="false" />

    <!-- Allowlist (https://cordova.apache.org/docs/en/dev/guide/appdev/allowlist/index.html#network-request-allow-list) -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <!-- Navigation -->
    <allow-navigation href="https://*.google.com/*" />
    <allow-navigation href="https://*.youtube-nocookie.com/*" />
    <allow-navigation href="http://*.kinoheld.de/*" />
    <allow-navigation href="http://*.cinemaheld.de/*" />
    <allow-navigation href="https://www.kinoheld.de/*" />
    <allow-navigation href="https://dev.cinemaheld.de/*" />
    <allow-navigation href="https://*.paypal.com/*" />
    <allow-navigation href="https://*.hpcgw.net/*" />
    <allow-navigation href="https://*.sofortueberweisung.de/*" />
    <allow-navigation href="https://*.sofort.com/*" />
    <allow-navigation href="https://*.kps-payment.de/*" />
    <allow-navigation href="https://*.masterpass.com/*" />
    <allow-navigation href="http://*.youtube.com/*" />
    <allow-navigation href="https://*.youtube.com/*" />
    <allow-navigation href="http://*/*video*" />
    <allow-navigation href="https://*/*video*" />

    <!-- Android-Platform config -->
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <!-- IOS-Platform config -->
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>